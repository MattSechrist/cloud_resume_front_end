{
        "Version": "2012-10-17",
        "Statement": [
            {
                "Effect": "Allow",
                "Principal": "*",
                "Action": "s3:GetObject",
                "Resource": "arn:aws:s3:::${{ secrets.AWS_BUCKET_NAME }}/*",
                "Condition": {
                    "StringEquals": {
                        "${{ secrets.AWS_REFERER_KEY }}": "${{ secrets.AWS_REFERER_VALUE }}"
                    }
                }
            }
        ]
    }
